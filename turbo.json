{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json", "package.json"],
      "outputs": ["dist/**", "out/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".eslintrc.json",
        ".eslintignore",
        "package.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.test.ts"]
    }
  }
}
